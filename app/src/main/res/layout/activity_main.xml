<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="6"
        android:rowCount="4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="↘"
            android:background="#66ff0000";
            android:id="@+id/arrow_to_right"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="↓"
            android:id="@+id/row_to_left"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="↓"
            android:id="@+id/row_to_center"
            android:layout_row="0"
            android:layout_column="2" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="↓"
            android:id="@+id/row_to_right"
            android:layout_row="0"
            android:layout_column="3" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="→"
            android:id="@+id/column_to_top"
            android:layout_row="1"
            android:layout_column="0" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:background="#51a1ff7f";
            android:ems="10"
            android:id="@+id/num1_1"
            android:layout_row="1"
            android:layout_column="1" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/num1_2"
            android:layout_column="2"
            android:layout_row="1" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/num1_3"
            android:layout_column="3"
            android:layout_row="1" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="→"
            android:id="@+id/column_to_center"
            android:layout_row="2"
            android:layout_column="0" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/num2_1"
            android:layout_column="1"
            android:layout_row="2" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/num2_2"
            android:layout_column="2"
            android:layout_row="2" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/num2_3"
            android:layout_column="3"
            android:layout_row="2" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="→"
            android:id="@+id/column_to_bottom"
            android:layout_row="3"
            android:layout_column="0" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/num3_1"
            android:layout_column="1"
            android:layout_row="3" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/num3_2"
            android:layout_column="2"
            android:layout_row="3" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/num3_3"
            android:layout_column="3"
            android:layout_row="3" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="↙"
            android:id="@+id/arrow_to_left"
            android:layout_row="0"
            android:layout_column="4" />
    </GridLayout>

</RelativeLayout>
